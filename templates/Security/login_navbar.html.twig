<div id="login-error"></div>

<form class="form" id="login-nav">
    <div class="form-group">
        <input id="username" class="form-control" placeholder="Login" required
            autocomplete="username">
    </div>
    <div class="form-group">
        <input type="password" class="form-control" id="password" placeholder="Hasło" required
            autocomplete="current-password">
        <div class="help-block text-right">
            <a href="" data-toggle="modal" data-target="#forgot-password-modal">Zapomniałeś hasła lub loginu?</a>
        </div>
    </div>
    <input type="hidden" name="_failure_path" value="{{ path('all_restaurants') }}"/>
    <button id="login-navbar-btn" type="submit" class="btn btn-primary btn-block"
        data-loading-text="<span class='glyphicon glyphicon-refresh spinning'></span> Proszę czekać">
        Zaloguj się
    </button>
    <div class="checkbox">
        <label>
            <input type="checkbox"> pamiętaj mnie
        </label>
    </div>
</form>