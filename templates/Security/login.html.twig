{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/register.css') }}">
{% endblock %}

{% block title %}Login{% endblock %}

{% block content %}
    <div class="container container-small">
        <h1 id="registration-header">Zaloguj się do serwisu FoodRank</h1>
        <form class="padding-bottom" action="{{ path('login_form') }}" method="post">
            {% if error %}
                <div id="login-error-msg" class="help-block">
                    <span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <div class="form-group">
                <label class="control-label required" for="registration_form_username">Login</label>
                <input type="text" id="registration_form_username" name="_username" value="{{ last_username }}"
                       required="required" class="form-control" autocomplete="username">
            </div>
            <div class="form-group">
                <label class="control-label required" for="registration_form_plainPassword_first">Hasło</label>
                <input type="password" id="registration_form_plainPassword_first" name="_password" required="required"
                       class="form-control" autocomplete="current-password">
            </div>
            <div class="help-block text-right">
                <a href="" data-toggle="modal" data-target="#forgot-password-modal">Zapomniałeś hasła lub loginu?</a>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label for="registration_form_termsAccepted" class="required">
                        <input type="checkbox" name="remember_me"> Pamiętaj mnie
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Zaloguj się</button>
        </form>
        <div class="padding-bottom text-center">Lub</div>
        <div class="padding-bottom">
            <a href="/connect/facebook" class="btn btn-block btn-social btn-facebook">
                <i class="fab fa-facebook-f"></i> Zaloguj się przez Facebooka
            </a>
        </div>
        <div class="bottom text-center">
            Nie masz konta? <a href="{{ path('registration') }}"><b>Załóż je</b></a>
        </div>
    </div>
{% endblock %}