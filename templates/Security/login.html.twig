<div id="login-error"></div>

<form class="form" id="login-nav">
    <div class="form-group">
        <label class="sr-only" for="username">Login</label>
        <input id="username" class="form-control" placeholder="Login" required
            autocomplete="username">
    </div>
    <div class="form-group">
        <label class="sr-only" for="password">Hasło</label>
        <input type="password" class="form-control" id="password" placeholder="Hasło" required
            autocomplete="current-password">
        <div class="help-block text-right">
            <a href="">Zapomaniałeś hasła?</a>
        </div>
    </div>
    <input type="hidden" name="_failure_path" value="{{ path('all_restaurants') }}"/>
    <div class="form-group">
        <button id="login-button" type="button" class="btn btn-primary btn-block">Zaloguj się</button>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox"> pamiętaj mnie
        </label>
    </div>
</form>