{% extends 'base.html.twig' %}
{% set menu_selected = 'main_page' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/all_restaurants.css') }}">
{% endblock %}

{% block title %}Poznań - gdzie zjeść?{% endblock %}

{% block header %}
    <div id="all-restaurants-jumbotron" class="jumbotron masthead">
        <div class="container">
            <h1 id="all-restaurants-jumbotron-header">Katalog restauracji w Poznaniu</h1>
            <p id="all-restaurants-jumbotron-paragraph">Poznaj najlepsze restauracje w&nbspPoznaniu dzięki portalowi społecznościowemu FoodRank.</p>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row text-center restaurants-flex-container">
        {% for restaurant in restaurants %}
            <div class="col-md-3 col-sm-6 hero-feature restaurant-flex-item">
                <div class="thumbnail restaurant-thumbnail">
                    <img src="{{ restaurant.getImageSrc() }}" alt="cannot load image" class="restaurant-image">
                    <div class="caption restaurant-caption">
                        <h3>{{ restaurant.getName() }}</h3>
                        <p>{{ restaurant.getShortDescription() }}</p>
                    </div>
                    <a class="btn btn-primary btn-more-info"
                       href="{{ path('restaurant_details', {'restaurant_id': restaurant.getId()}) }}">
                        Więcej informacji
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}