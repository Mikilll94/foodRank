{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/restaurant_index.css') }}"
{% endblock %}

{% block title %}View restaurants{% endblock %}

{% block content %}
    <header class="jumbotron hero-spacer">
        <h1>Witaj w FoodRank!</h1>
        <p>Znajdź najlepsze restauracje w okolicy. Dziel się wiedzą z innymi na temat odwiedzonych przez ciebie restauracji.</p>
        <p><a class="btn btn-primary btn-large">Zaczynamy!</a>
        </p>
    </header>

    <hr>

    <div class="row">
        <div class="col-lg-12">
            <h3>Najlepsze restauracje w Poznaniu</h3>
        </div>
    </div>

    <div class="row text-center">

        {% for restaurant in restaurants %}
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail restaurant-thumbnail">
                    <img src="{{ asset('build/images/' ~ restaurant.getImageUrl()) }}" alt="cannot load image" class="restaurant-image">
                    <div class="caption">
                        <h3>{{ restaurant.getName() }}</h3>
                        <p>{{ restaurant.getShortDescription() }}</p>
                        <p>
                            <a href="#" class="btn btn-primary">Buy Now!</a> <a href="#" class="btn btn-default">Więcej informacji</a>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}