{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/restaurant_index.css') }}"
{% endblock %}

{% block title %}View restaurants{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Najlepsze restauracje w Poznaniu</h1>
        </div>
    </div>

    <div class="row text-center">

        {% for restaurant in restaurants %}
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail restaurant-thumbnail">
                    <img src="{{ asset('build/images/' ~ restaurant.getImageUrl()) }}" alt="cannot load image" class="restaurant-image">
                    <div class="caption restaurant-caption">
                        <h3>{{ restaurant.getName() }}</h3>
                        <p>{{ restaurant.getShortDescription() }}</p>
                    </div>
                </div>
                <a class="btn btn-primary btn-more-info"
                    href="{{ path('restaurant_details', {'restaurant_id': restaurant.getId()}) }}"
                    class="btn btn-default">WiÄ™cej informacji
                </a>
            </div>
        {% endfor %}

    </div>
{% endblock %}
{% block javascripts %}
    <script src={{ asset('build/js/restaurant_index.js') }}></script>
{% endblock %}