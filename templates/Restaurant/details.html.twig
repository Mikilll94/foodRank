{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/restaurant_details.css') }}">
{% endblock %}

{% block title %}{{ restaurant.name }}{% endblock %}

{% block content %}
    <div class="row">

        <div class="col-md-3">
            <p class="lead">{{ restaurant.name }}</p>
            <div class="list-group">
                <a href="#" class="list-group-item active">Opis</a>
                <a href="#" class="list-group-item">Nagrody</a>
                <a href="#" class="list-group-item">Opinie</a>
            </div>
        </div>

        <div class="col-md-9">

            <div class="thumbnail restaurant-details-thumbnail">
                <img class="img-responsive" src="{{ asset('build/images/' ~ restaurant.getImageUrl()) }}" alt="cannot load image">
                <div class="caption-full">
                    <br />
                    <p class="restaurant-description">{{ restaurant.description }}</p>
                </div>
            </div>

            <div class="well comments-well">
                {% form_theme form 'bootstrap_3_layout.html.twig' %}
                {{ form_start(form) }}
                    {#<div class="form-group stars">#}
                        {#<input id="star-5" type="radio" name="star"/>#}
                        {#<label for="star-5"></label>#}
                        {#<input id="star-4" type="radio" name="star"/>#}
                        {#<label for="star-4"></label>#}
                        {#<input id="star-3" type="radio" name="star"/>#}
                        {#<label for="star-3"></label>#}
                        {#<input id="star-2" type="radio" name="star"/>#}
                        {#<label for="star-2"></label>#}
                        {#<input id="star-1" type="radio" name="star"/>#}
                        {#<label for="star-1"></label>#}
                    {#</div>#}
                    {#<div class="form-group">#}
                        {#<textarea class="form-control"></textarea>#}
                    {#</div>#}
                    {{ form_widget(form) }}
                    <div class="text-right">
                        <a class="btn btn-success">Wystaw opiniÄ™</a>
                    </div>
                {{ form_end(form    ) }}

                {% for comment in restaurant.comments %}
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            {% set star_index = 0 %}
                            {% for i in 1..comment.getRate() %}
                                {% set star_index = i %}
                                <span class="glyphicon glyphicon-star"></span>
                            {% endfor %}
                            {% for i in star_index + 1..5 if star_index < 5 %}
                                <span class="glyphicon glyphicon-star-empty"></span>
                            {% endfor %}
                            {{ comment.getAuthor() }}
                            <span class="pull-right">{{ comment.getPostingDate() | date("m-d-Y H:i:s") }}</span>
                            <p>{{ comment.getContent() }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}