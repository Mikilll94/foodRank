<div class="well well-sm">
    <div class="row">
        <div class="col-xs-12 col-md-6 text-center">
            <h1 class="rating-num">{{ statistics.average_rate|round(2) }}</h1>
            <input id="rating" class="rating-loading" value="{{ statistics.average_rate }}"
                   data-min="0" data-max="5" data-step="0.1">
            <div id="comments-count">
                <span class="glyphicon glyphicon-user"></span> {{ statistics.comments_count }}
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="row rating-desc">
                <div class="col-xs-3 col-md-3 text-right">
                    <span class="glyphicon glyphicon-star"></span>5
                </div>
                <div class="col-xs-8 col-md-9">
                    <div class="progress progress-striped">
                        <div class="progress-bar progress-bar-striped progress-bar-success" role="progressbar"
                             style="width: {{ rate_counts[5] }}%">
                            <span class="rate-percent">{{ rate_counts[5] }}%</span>
                        </div>
                    </div>
                </div>
                <!-- end 5 -->
                <div class="col-xs-3 col-md-3 text-right">
                    <span class="glyphicon glyphicon-star"></span>4
                </div>
                <div class="col-xs-8 col-md-9">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped progress-bar-info" role="progressbar"
                             style="width: {{ rate_counts[4] }}%">
                            <span class="rate-percent">{{ rate_counts[4] }}%</span>
                        </div>
                    </div>
                </div>
                <!-- end 4 -->
                <div class="col-xs-3 col-md-3 text-right">
                    <span class="glyphicon glyphicon-star"></span>3
                </div>
                <div class="col-xs-8 col-md-9">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped progress-bar-warning" role="progressbar"
                             style="width: {{ rate_counts[3] }}%">
                            <span class="rate-percent">{{ rate_counts[3] }}%</span>
                        </div>
                    </div>
                </div>
                <!-- end 3 -->
                <div class="col-xs-3 col-md-3 text-right">
                    <span class="glyphicon glyphicon-star"></span>2
                </div>
                <div class="col-xs-8 col-md-9">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped" role="progressbar"
                             style="width: {{ rate_counts[2] }}%; background-color: #a0a425">
                            <span class="rate-percent">{{ rate_counts[2] }}%</span>
                        </div>
                    </div>
                </div>
                <!-- end 2 -->
                <div class="col-xs-3 col-md-3 text-right">
                    <span class="glyphicon glyphicon-star"></span>1
                </div>
                <div class="col-xs-8 col-md-9">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped progress-bar-danger" role="progressbar"
                             style="width: {{ rate_counts[1] }}%">
                            <span class="rate-percent">{{ rate_counts[1] }}%</span>
                        </div>
                    </div>
                </div>
                <!-- end 1 -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>